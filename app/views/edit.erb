<div class="container">
  
  <h2>Edit Your Event</h2>
  <form action="/edit_event" method="post">

    <input type="hidden" name="event_id" value="<%=@event.id%>" >

    <input type="text" id="name" name="event[name]" value="<%=@event.name%>"><br>
    <input type="text" id="location" name="event[location]" value="<%=@event.location%>"  ><br>

    <label for="starts_at">Starts at:</label>
    <input type="date" id="starts_at" name="event[starts_at]" <br><br>
    
    <label for="ends_at">Ends at:</label>
    <input type="date" id="ends_at" name="event[ends_at]" ><br>

    <input type="submit" value="Save Event" class="regular_button">
  </form>


</div>
